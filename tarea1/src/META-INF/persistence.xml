<?xml version="1.0" encoding="UTF-8"?>
<persistence version="3.0"
             xmlns="https://jakarta.ee/xml/ns/persistence"
             xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
             xsi:schemaLocation="https://jakarta.ee/xml/ns/persistence 
             https://jakarta.ee/xml/ns/persistence/persistence_3_0.xsd">

    <!-- ===================== -->
    <!--   PRODUCCIÃ“N / APP    -->
    <!-- ===================== -->
    <persistence-unit name="EdicionesArchivadasPU" transaction-type="RESOURCE_LOCAL">
        <provider>org.eclipse.persistence.jpa.PersistenceProvider</provider>

        <class>logica.persistence.EdicionArchivada</class>
        <class>logica.persistence.UsuarioArchivado</class>
        <class>logica.persistence.AsistenteArchivado</class>
        <class>logica.persistence.OrganizadorArchivado</class>
        <class>logica.persistence.RegistroArchivado</class>

        <properties>
            <!-- HSQLDB en disco -->
            <property name="jakarta.persistence.jdbc.driver" value="org.hsqldb.jdbc.JDBCDriver"/>
            <property name="jakarta.persistence.jdbc.url" value="jdbc:hsqldb:file:${user.home}/.eventosUy/edicionesdb;shutdown=true"/>
            <property name="jakarta.persistence.jdbc.user" value="SA"/>
            <property name="jakarta.persistence.jdbc.password" value=""/>

            <!-- EclipseLink settings -->
            <property name="eclipselink.ddl-generation" value="create-or-extend-tables"/>
            <property name="eclipselink.ddl-generation.output-mode" value="database"/>
            <property name="eclipselink.logging.level" value="INFO"/>
            <property name="eclipselink.logging.level.sql" value="FINE"/>
            <property name="eclipselink.logging.parameters" value="true"/>
        </properties>
    </persistence-unit>

    <!-- ===================== -->
    <!--   TEST / JUNIT        -->
    <!-- ===================== -->
    <persistence-unit name="testPU" transaction-type="RESOURCE_LOCAL">
        <provider>org.eclipse.persistence.jpa.PersistenceProvider</provider>

        <class>logica.persistence.AsistenteArchivado</class>
        <class>logica.persistence.UsuarioArchivado</class>

        <properties>
            <!-- HSQLDB en memoria -->
            <property name="jakarta.persistence.jdbc.driver" value="org.hsqldb.jdbc.JDBCDriver"/>
            <property name="jakarta.persistence.jdbc.url" value="jdbc:hsqldb:mem:testdb;shutdown=true"/>
            <property name="jakarta.persistence.jdbc.user" value="SA"/>
            <property name="jakarta.persistence.jdbc.password" value=""/>

            <!-- EclipseLink test mode -->
            <property name="eclipselink.ddl-generation" value="drop-and-create-tables"/>
            <property name="eclipselink.logging.level" value="FINE"/>
            <property name="eclipselink.logging.parameters" value="true"/>
        </properties>
    </persistence-unit>

</persistence>
